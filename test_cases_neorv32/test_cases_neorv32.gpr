with "config/test_cases_neorv32_config.gpr";
with "bare_runtime.gpr";
with "neorv32_hal.gpr";
with "ada_ml_library.gpr";
project Test_Cases_Neorv32 is

   for Target use "riscv64-elf";
   for Runtime ("Ada") use Bare_Runtime'Runtime ("Ada");

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Test_Cases_Neorv32_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("test_cases_neorv32.adb");

   package Compiler is
      for Default_Switches ("Ada") use Test_Cases_Neorv32_Config.Ada_Compiler_Switches & ("-gnat2022");
   end Compiler;

   package Linker is
      for Switches ("Ada") use ("-T", Neorv32_Hal'Project_Dir & "/src/link.ld");
   end Linker;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Test_Cases_Neorv32;
